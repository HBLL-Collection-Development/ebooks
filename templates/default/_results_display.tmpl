{% spaceless %}
{% autoescape false %}

{% if html.num_results == 0 %}
  <h1 class="clear hitlist">
    Please go back and try again.<br/><span class="num">No results for your search: </span> <span class="term">{{ heading }}</span>
  </h1>
{% else %}

  {% include '_pagination.tmpl' %}

  <h3><a href="csv.php?type={{ type }}&amp;term={{ term }}&amp;heading={{ heading | url_encode }}">Download results</a></h3><br/>
  <p>The following list shows <strong>all</strong> usage for a title. If a title is available on multiple platforms, the usage is summed and shown here. If you would like to know usage for a title on a single platform, click on the title to view more detailed usage information.</p>
  <table class="results">
    <thead>
      <tr><th></th><th class="title">Title<br/><ul class="inline_list"><li>Author</li><li>Publisher</li><li>ISBN</li><li>Call number</li></ul></th><th>Platform(s)</th><th colspan="2" class="usage">Title-level Use</th><th colspan="2" class="usage last">Chapter-level Use</th></tr>
      <tr><th></th><th></th><th></th><th>{{ html.current_year }}</th><th>{{ html.previous_year }}</th><th class="last">{{ html.current_year }}</th><th>{{ html.previous_year }}</th></tr>
    </thead>
    <tbody>
    {% for key, result in html.results %}
      <tr><td>{{ (((html.page - 1) * html.rpp) + key + 1) | number_format }}.</td><td><strong><a href="book.php?book_id={{ result.book_id|e('html') }}">{{ result.title }}</a></strong><br/><ul class="inline_list">{% if result.author %}<li>{{ result.author }}</li>{% endif %}{% if result.publisher %}<li>{{ result.publisher }}</li>{% endif %}{% if result.isbn %}<li><a href="http://search.lib.byu.edu/byu/{{ result.isbn }}/set:byuall/field:isbn/match:contains">{{ result.isbn }}</a></li>{% endif %}{% if result.call_num %}<li>{{ result.call_num }}</li>{% endif %}</ul></td><td><ol>{{ result.platforms }}</ol></td><td>{% if result.latest_br1 is null %}--{% else %}{{ result.latest_br1|number_format }}{% endif %}</td><td>{% if result.previous_br1 is null %}--{% else %}{{ result.previous_br1|number_format }}{% endif %}</td><td class="last">{% if result.latest_br2 is null %}--{% else %}{{ result.latest_br2|number_format }}{% endif %}</td><td>{% if result.previous_br2 is null %}--{% else %}{{ result.previous_br2|number_format }}{% endif %}</td></tr>
    {% endfor %}
    </tbody>
  </table>
  
  {% include '_pagination.tmpl' %}
  
{% endif %}

{% endautoescape %}
{% endspaceless %}
