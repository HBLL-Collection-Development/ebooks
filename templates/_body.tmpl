{% set app_url = constant('config::URL') %}
{% spaceless %}
{% autoescape false %}

<h1>{{ heading }}</h1>
<p>The following list shows <strong>all</strong> usage for a title. If a title is available on multiple platforms, the usage is summed and shown here. If you would like to know usage for a title on a single platform, click on the title to view more detailed usage information.</p>
<table class="results">
  <thead>
    <tr><th class="title">Title<br/><ul class="inline_list"><li>Author</li><li>Publisher</li><li>ISBN</li><li>Call number</li></ul></th><th colspan="2" class="usage">{{ html.current_year }} Usage</th><th colspan="2" class="usage last">{{ html.previous_year }} Usage</th></tr>
    <tr><th></th><th>BR1</th><th>BR2</th><th class="last">BR1</th><th>BR2</th></tr>
  </thead>
  <tbody>
  {% for result in html.results %}
    <tr><td><strong><a href="book.php?book_id={{ result.book_id|e('html') }}">{{ result.title }}</a></strong><br/><ul class="inline_list">{% if result.author %}<li>{{ result.author }}</li>{% endif %}{% if result.publisher %}<li>{{ result.publisher }}</li>{% endif %}{% if result.isbn %}<li>{{ result.isbn }}</li>{% endif %}{% if result.call_num %}<li>{{ result.call_num }}</li>{% endif %}</ul></td><td>{{ result.latest_br1|number_format }}</td><td>{{ result.latest_br2|number_format }}</td><td class="last">{{ result.previous_br1|number_format }}</td><td>{{ result.previous_br2|number_format }}</td></tr>
  {% endfor %}
  </tbody>
</table>

{% endautoescape %}
{% endspaceless %}
